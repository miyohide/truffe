<%# @side_bar_template_name = 'shared/side_bar' %>

<div id="gigs">
  <h2><%= @gig_year %>年<%= @gig_month %>月のライブスケジュール</h2>
  
  <div id="gigs_nav_top" class="nav_change_month">
    <%#= render 'next_and_prev_month' %>
  </div>

  <%#= link_to t('gigs.this_month'), :path => 'gigs#index', :year => Date.today.year, :month => Date.today.month %><br>
  
  <%= render 'nav_months' %>

  <% unless @gigs.blank? %>
    <ul id="gigs_list">
      <%= render :partial => 'gigs/monthly_show' %>
    </ul>
    <%= paginate @gigs %>
  <% else %>
    <div id="no_gigs">この月の出演情報はありません。</div>
  <% end %>

  <%= render 'nav_months' %>

  <div id="gigs_nav_bottom" class="nav_change_month">
    <%#= render 'next_and_prev_month' %>
  </div>
</div>
