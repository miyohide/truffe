        <li>
          <div class="disc_image">
          <% if discographies.url %>
            <%= link_to image_tag('discographies/disc_' + discographies.id.to_s + '.jpg', :size => '180x180'), discographies.url, :target => '_blank' %>
          <% else %>
            <%= image_tag('discographies/disc_' + discographies.id.to_s + '.jpg', :size => '180x180') %>
          <% end %>
        </div>
        <div class="disc_detail">
          <% if discographies.title && discographies.artist %>
            <div class="title">
              <% if discographies.url %>
                <%= link_to discographies.title + ' / ' + discographies.artist, discographies.url, :target => '_blank' %>
              <% else %>
                <%= discographies.title %> / <%= discographies.artist %>
              <% end %>
            </div>
          <% end %>
          <% if discographies.updated_at && discographies.updated_at >= Date.today.advance(:months => -1) %>
            <div class="new">new</div>
          <% end %>
          <div class="release_date"><span><%= t('discographies.release_date') %></span><%= l(discographies.release_date, :format => :long) %></div>
          <% if discographies.players %>
            <div class="artists"><span><%= t('discographies.artists') %></span><%= discographies.players %></div>
          <% end %>
          <% if discographies.record_co %>
            <div class="label"><span><%= t('discographies.label') %></span><%= discographies.record_co %></div>
          <% end %>
          <% if discographies.comment %>
            <div class="comments"><%= discographies.comment %></div>
          <% end %>
        </div>
      </li>
